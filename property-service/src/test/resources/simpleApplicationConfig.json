{
    "fields": [
        {
            "path": "modeOfTransfer",
            "required": true,
            "validations": [
                {
                    "type": "enum",
                    "params": {
                        "values": [
                            "SALE",
                            "GIFT"
                        ]
                    },
                    "errorMessage": "modeOfTransfer will only access types 'SALE', 'GIFT'"
                }
            ]
        },
        {
            "path": "purchaser.name",
            "required": true,
            "validations": [
                {
                    "type": "length",
                    "params": {
                        "min": 5,
                        "max": 50
                    }
                }
            ]
        },
        {
            "path": "purchaser.email",
            "required": false,
            "validations": [
                {
                    "type": "email"
                }
            ]
        },
        {
            "path": "purchaser.colony",
            "required": false,
            "validations": [
                {
                    "type": "mdms",
                    "params": {
                        "moduleName": "EstateProperties",
                        "masterName": "colonies"
                    }
                }
            ]
        }
    ]
}